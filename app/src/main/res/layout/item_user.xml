<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_user_ll_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/iv_avatar_size"
        android:layout_height="@dimen/iv_avatar_size"
        android:layout_margin="@dimen/iv_avatar_margin"/>

    <TextView
        tools:text="login"
        android:layout_marginStart="@dimen/tv_login_marginStart"
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>